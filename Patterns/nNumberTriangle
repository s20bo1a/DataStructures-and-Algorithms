public class Solution {
    public static void nNumberTriangle(int n) {
        // Write your code here
       int k=0;
       for(int i=0;i<n;i++){
           for(int j=0;j<=i;j++){
             k=k+1;
             System.out.print(k+" ");
           }
           System.out.println();
       }

    }
}
